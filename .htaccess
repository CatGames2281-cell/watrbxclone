RewriteEngine On
RewriteBase /

# Якщо це запит до реального файлу або папки - не чіпаємо його
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Додатковий захист: якщо запит закінчується на .css, .js, .png і т.д., 
# але файл не знайдено - НЕ відправляємо в index.php (щоб не було каші)
RewriteCond %{REQUEST_URI} \.(css|js|png|jpg|jpeg|gif|ico|svg)$ [NC]
RewriteRule ^ - [R=404,L]

# Все інше - в index.php
RewriteRule ^ index.php [L]
